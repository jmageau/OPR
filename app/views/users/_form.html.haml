= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
  %br
  .field
    = f.label :password
    = f.password_field :password
  %br
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  %br
  .field
    = f.label :type
    = f.select :type, User.subclasses.map(&:name)
  %br
  -#  TODO: subclasses does not always show all classes in development mode
  -# TODO: move type select to top of page, change visible fields depending on type of user
  .actions
    = f.submit 'Save'
