= form_for @advertisement do |f|
  - if @advertisement.errors.any?
    #error_explanation
      %h2= "#{pluralize(@advertisement.errors.count, "error")} prohibited this advertisement from being saved:"
      %ul
        - @advertisement.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :newspaper_name
    = f.text_field :newspaper_name
  .field
    = f.label :start_date
    = f.date_select :start_date
  .field
    = f.label :end_date
    = f.date_select :end_date
  .field
    = f.label :cost
    = f.text_field :cost
  .field
    = f.label :property_id
    = f.text_field :property_id
  .actions
    = f.submit 'Save'
