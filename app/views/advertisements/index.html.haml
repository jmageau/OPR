%h1 Listing advertisements

%table
  %tr
    %th Newspaper name
    %th Start date
    %th End date
    %th Cost
    %th Property ID
    %th
    %th
    %th

  - @advertisements.each do |advertisement|
    %tr
      %td= advertisement.newspaper_name
      %td= advertisement.start_date
      %td= advertisement.end_date
      %td= advertisement.cost
      %td= advertisement.property_id
      %td= link_to 'Show', advertisement
      %td= link_to 'Edit', edit_advertisement_path(advertisement)
      %td= link_to 'Destroy', advertisement, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

