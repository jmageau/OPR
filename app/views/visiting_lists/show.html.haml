%p
  -#%b Customer:
  -#= @visiting_list.customer_id

%table.sortable
  %tr.tableHeader
    %th Property type
    %th Address
    %th Location
    %th Number of bedrooms
    %th Number of bathrooms
    %th Number of other rooms
    %th Rent
    %th Deletion status
    %th Subsidiary agency
    %th Owner
    %th

  - @visiting_list.properties.each do |property|
    %tr
      %td= property.property_type
      %td= property.address
      %td= property.location
      %td= property.number_of_bedrooms
      %td= property.number_of_bathrooms
      %td= property.number_of_other_rooms
      %td= property.rent
      %td= property.deletion_status
      %td= property.subsidiary_agency_id
      %td= property.owner_id
      %td= link_to 'Remove',  remove_from_visiting_list_path(@visiting_list, property), :data => { :confirm => 'Are you sure?' }

-if has_permission(current_user, :administrator)
  = link_to 'Edit', edit_visiting_list_path(@visiting_list)
  \|
= link_to 'Back', :back
